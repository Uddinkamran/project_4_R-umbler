<% for each_user in @user_all do%>
  <div class="column">
   <div class="user_img">
    <div class="ui fluid card">
      <div class="image">
        <img src="<%= each_user.pic %>">
      </div>

      <div class="content">
        <a class="header"><%= each_user.firstName %> <%= each_user.lastName %></a>
      </div>
      </div>
    </div>
  </div>
  <%end%>
  </div>



</section>




<h2>Welcome to Stockfeed </h2>

<div class="ui three column grid">
  <div class="column">
    <div class="ui fluid card">
      <div class="image">
        <img src="<%= "/images/trade1.jpg" %>">
      </div>
    </div>
  </div>
  <div class="column">
    <div class="ui fluid card">
      <div class="image">
        <img src="<%= "/images/trade2.jpeg" %>">
      </div>
    </div>
  </div>
  <div class="column">
    <div class="ui fluid card">
      <div class="image">
        <img src="<%= "/images/trade3.jpg" %>">
      </div>
    </div>
  </div>
</div>



<div class="padding">
<div class="ui segment">
<div class="ui  form" >
    <form method="POST" action="/feed">
        <div class="field">
            <h3><label>Create Post</label></h3>
            <input  style="height:20vh; width:80%;" type="textarea" name="content"></input>
        </div>
        <button class="positive ui button" type="submit">Post</button>
    </form>
</div>


<br>

<div class="ui feed">

<% for items in @posts.reverse do%>
  <div class="event">
    <div class="label">
      <img src="<%= items.user.pic %>">
    </div>
    <div class="content">
      <div class="summary">
        <a class="user">
        <%= items.user.firstName %>
        </a> created a post
        <div class="date">
            <%= Time.now %>
        </div>
      </div>
      <div class="extra text">
        <%= items.text %>
        </div>
        <a href="/feed/delete/<%= items.id %>" class="mini ui button"> DELETE </a>

        <div class="meta">
        <a class="like">
        <i class="like icon"></i> 4 Likes
        </a>
        </div>
        </div>
        </div>

 <% end %>
</div>
</div>
</div>